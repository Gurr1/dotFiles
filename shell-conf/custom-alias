alias s=sudo
alias v=vim
alias ainstall="sudo apt install"
alias aupdate="sudo apt update"
alias aupgrade="sudo apt update && sudo apt upgrade"
alias c="clear"
alias gc="git clone"
alias dev="cd $HOME/pagero-dev"
alias recipe="vim $HOME/.recipe"
alias editzsh="vim $HOME/.zshrc"
alias intellij="idea"
alias redeploy="cd $HOME/pagero-dev/platformrecipe; sbt personal:deploy; cd -"
alias hist="history"
alias updatealias="vim $HOME/.conf/custom-alias && source $HOME/.conf/custom-alias"
